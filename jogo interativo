#include <stdio.h>
#include <string.h>

// Estrutura de uma carta de cidade
typedef struct {
char nome[50];
float populacao; // em milhões
float area; // em km²
float pib; // em bilhões R$
float idh; // índice de 0 a 1
} Cidade;

// Função para comparar duas cidades
void compararCidades(Cidade c1, Cidade c2, int atributo) {
float valor1, valor2;

switch (atributo) {
case 1: // População
valor1 = c1.populacao;
valor2 = c2.populacao;
break;
case 2: // Área
valor1 = c1.area;
valor2 = c2.area;
break;
case 3: // PIB
valor1 = c1.pib;
valor2 = c2.pib;
break;
case 4: // IDH
valor1 = c1.idh;
valor2 = c2.idh;
break;
default:
printf("Atributo inválido!\n");
return;
}

printf("\nComparando pelo atributo escolhido...\n");
printf("%s: %.2f vs %s: %.2f\n", c1.nome, valor1, c2.nome, valor2);

if (valor1 > valor2) {
printf(">>> %s venceu!\n", c1.nome);
} else if (valor2 > valor1) {
printf(">>> %s venceu!\n", c2.nome);
} else {
printf(">>> Empate!\n");
}
}

int main() {
Cidade rio = {"Rio de Janeiro", 6.7, 1200.0, 400.0, 0.799};
Cidade sp = {"São Paulo", 12.3, 1521.0, 750.0, 0.805};

int escolha;
printf("Escolha o atributo para comparar:\n");
printf("1 - População (milhões)\n");
printf("2 - Área (km²)\n");
printf("3 - PIB (bilhões R$)\n");
printf("4 - IDH\n");
printf("Digite sua escolha: ");
scanf("%d", &escolha);

compararCidades(rio, sp, escolha);


    printf("Modo: 1) Você escolhe o atributo  2) Atributo aleatório\n");
    printf("Escolha o modo (1 ou 2): ");
    if (!fgets(buffer, sizeof(buffer), stdin)) return 0;
    modo = atoi(buffer);
    if (modo == 1) {
        printf("Digite o número do atributo (1-4): ");
        if (!fgets(buffer, sizeof(buffer), stdin)) return 0;
        escolha = atoi(buffer);
        if (escolha < 1 || escolha > 4) {
            printf("Atributo inválido. Saindo.\n");
            return 0;
        }
    } else {
        escolha = (rand() % 4) + 1;
        printf("Atributo sorteado: %d\n", escolha);
    }

    printf("\n--- Valores ---\n");
    mostrar_cidade(&rio);
    printf("\n");
    mostrar_cidade(&sp);
    printf("\n--- Resultado da comparação ---\n");

    int resultado = comparar(&rio, &sp, escolha);
    switch (escolha) {
        case 1: printf("Atributo: População\n\n"); break;
        case 2: printf("Atributo: Área\n\n"); break;
        case 3: printf("Atributo: PIB per capita\n\n"); break;
        case 4: printf("Atributo: Densidade\n\n"); break;
    }

    if (resultado == 1) {
        printf("Vencedor: %s\n", rio.nome);
    } else if (resultado == -1) {
        printf("Vencedor: %s\n", sp.nome);
    } else {
        printf("Empate!\n");
    }

    return 0;


